<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/name_of_operation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="25sp"
            android:text="Выбор категории"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/vector"
            style="@style/vector"
            android:src="@drawable/vector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_of_operation" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_food"
                style="@style/add_images"
                android:src="@drawable/diet" />

            <ImageView
                android:id="@+id/ic_transport"
                style="@style/add_images"
                android:src="@drawable/military_vehicle" />

            <ImageView
                android:id="@+id/ic_technique"
                style="@style/add_images"
                android:src="@drawable/computer" />

            <ImageView
                android:id="@+id/ic_spa"
                style="@style/add_images"
                android:src="@drawable/massage" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_clothes"
                style="@style/add_images"
                android:src="@drawable/tshirt" />

            <ImageView
                android:id="@+id/ic_health"
                style="@style/add_images"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/ic_travels"
                style="@style/add_images"
                android:src="@drawable/beach" />

            <ImageView
                android:id="@+id/ic_cafe"
                style="@style/add_images"
                android:src="@drawable/cafe" />
        </LinearLayout>
    </LinearLayout>


    <include layout="@layout/bottom_navigation_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>