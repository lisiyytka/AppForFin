<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_weight="1"
             android:gravity="center">

             <ImageView
                 style="@style/add_images"
                 android:src="@drawable/diet"/>
             <ImageView
                 style="@style/add_images"
                 android:src="@drawable/military_vehicle"/>
             <ImageView
                 style="@style/add_images"
                 android:src="@drawable/computer"/>
             <ImageView
                 style="@style/add_images"
                 android:src="@drawable/massage"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                style="@style/add_images"
                android:src="@drawable/tshirt"/>
            <ImageView
                style="@style/add_images"
                android:src="@drawable/heart"/>
            <ImageView
                style="@style/add_images"
                android:src="@drawable/beach"/>
            <ImageView
                style="@style/add_images"
                android:src="@drawable/cafe"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/vector"
        style="@style/vector"
        android:src="@drawable/vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icons"/>

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textSize="48sp"
        android:textColor="@color/black"
        android:text="123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vector"
        app:layout_constraintBottom_toTopOf="@id/vector1"/>

    <ImageView
        android:id="@+id/check"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_check"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vector"
        app:layout_constraintBottom_toTopOf="@id/vector1"/>

    <ImageView
        android:id="@+id/vector1"
        style="@style/vector"
        android:src="@drawable/vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sum"/>

    <ImageView
        android:id="@+id/current"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_currency_dollar"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vector1" />

    <ImageView
        android:id="@+id/vector2"
        style="@style/vector"
        android:src="@drawable/vector2"
        app:layout_constraintStart_toEndOf="@id/current"
        app:layout_constraintTop_toBottomOf="@id/vector1"/>

    <TextView
        android:id="@+id/massage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:text="123"
        app:layout_constraintStart_toEndOf="@id/vector2"
        app:layout_constraintTop_toBottomOf="@id/vector1" />


    <LinearLayout
        android:id="@+id/calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_weight="1">
            <TextView
                style="@style/n_buttons"
                android:text="+" />
            <TextView
                style="@style/n_buttons"
                android:text="*" />
            <TextView
                style="@style/n_buttons"
                android:text="/" />
            <TextView
                style="@style/n_buttons"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1">
            <TextView
                style="@style/n_buttons"
                android:text="7" />
            <TextView
                style="@style/n_buttons"
                android:text="4" />
            <TextView
                style="@style/n_buttons"
                android:text="1" />
            <TextView
                style="@style/n_buttons"
                android:text="." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_weight="1">
            <TextView
                style="@style/n_buttons"
                android:text="8"/>
            <TextView
                style="@style/n_buttons"
                android:text="5" />
            <TextView
                style="@style/n_buttons"
                android:text="2" />
            <TextView
                style="@style/n_buttons"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1">
            <TextView
                style="@style/n_buttons"
                android:text="9" />
            <TextView
                style="@style/n_buttons"
                android:text="6" />
            <TextView
                style="@style/n_buttons"
                android:text="3" />
            <ImageView
                style="@style/n_buttons"
                android:src="@drawable/ic_del"
                android:padding="15dp"/>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/bottom_navigation_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>