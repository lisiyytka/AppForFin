<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">


    <LinearLayout
        android:id="@+id/text_and_icons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/calculator">

        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/show_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_food"
                    style="@style/add_images"
                    android:src="@drawable/diet" />

                <ImageView
                    android:id="@+id/ic_transport"
                    style="@style/add_images"
                    android:src="@drawable/military_vehicle" />

                <ImageView
                    android:id="@+id/ic_technique"
                    style="@style/add_images"
                    android:src="@drawable/computer" />

                <ImageView
                    android:id="@+id/ic_spa"
                    style="@style/add_images"
                    android:src="@drawable/massage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_clothes"
                    style="@style/add_images"
                    android:src="@drawable/tshirt" />

                <ImageView
                    android:id="@+id/ic_health"
                    style="@style/add_images"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/ic_travels"
                    style="@style/add_images"
                    android:src="@drawable/beach" />

                <ImageView
                    android:id="@+id/ic_cafe"
                    style="@style/add_images"
                    android:src="@drawable/cafe" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/show_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icons">

            <ImageView
                android:id="@+id/vector"
                style="@style/vector"
                android:src="@drawable/vector" />

            <LinearLayout
                android:id="@+id/total_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/current"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_currency_dollar" />
                <TextView
                    android:id="@+id/sum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:hint="0"/>



            </LinearLayout>

            <ImageView
                android:id="@+id/vector1"
                style="@style/vector"
                android:src="@drawable/vector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_amount" />

            <LinearLayout
                android:id="@+id/inf"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/massage"
                    android:layout_width="289dp"
                    android:layout_height="47dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1"
                    android:cursorVisible="false"
                    android:hint="Комментарий"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/vector2"
                    style="@style/vector"
                    android:src="@drawable/vector2" />

                <ImageView
                    android:id="@+id/check"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_check" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/calculator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/darkGray">

            <TextView
                android:id="@+id/btn_multiply"
                style="@style/n_buttons"
                android:text="*" />
            <TextView
                android:id="@+id/btn_divide"
                style="@style/n_buttons"
                android:text="/" />
            <TextView
                android:id="@+id/btn_plus"
                style="@style/n_buttons"
                android:text="+" />
            <TextView
                android:id="@+id/btn_minus"
                style="@style/n_buttons"
                android:text="-" />
            <TextView
                android:id="@+id/btn_equals"
                style="@style/n_buttons"
                android:text="=" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_1"
                style="@style/n_buttons"
                android:text="1" />
            <TextView
                android:id="@+id/btn_2"
                style="@style/n_buttons"
                android:text="2" />
            <TextView
                android:id="@+id/btn_3"
                style="@style/n_buttons"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_4"
                style="@style/n_buttons"
                android:text="4"/>
            <TextView
                android:id="@+id/btn_5"
                style="@style/n_buttons"
                android:text="5" />
            <TextView
                android:id="@+id/btn_6"
                style="@style/n_buttons"
                android:text="6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_7"
                style="@style/n_buttons"
                android:text="7"/>
            <TextView
                android:id="@+id/btn_8"
                style="@style/n_buttons"
                android:text="8" />
            <TextView
                android:id="@+id/btn_9"
                style="@style/n_buttons"
                android:text="9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_dott"
                style="@style/n_buttons"
                android:text="." />
            <TextView
                android:id="@+id/btn_0"
                style="@style/n_buttons"
                android:text="0" />
            <ImageView
                android:id="@+id/btn_delete"
                style="@style/n_buttons"
                android:src="@drawable/ic_del"
                android:padding="5dp"/>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/bottom_navigation_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>